---
export interface Props {
  posts: any[]
}
const { posts } = Astro.props
---

<section class="px-6 md:px-12 py-16 bg-white text-black">
  <div class="max-w-5xl mx-auto">
    <h2 class="text-3xl md:text-4xl font-bold mb-8">Insights & Resources</h2>
    <div class="grid md:grid-cols-3 gap-8">
      {posts.map(post => (
        <article class="border p-4 rounded-lg shadow-sm hover:shadow-lg transition">
          <img src={post.featuredImage?.node?.sourceUrl} alt={post.title} class="rounded mb-4" />
          <h3 class="text-xl font-semibold">{post.title}</h3>
          <p class="text-gray-600 text-sm" innerHTML={post.excerpt}></p>
          <a href={`/blog/${post.slug}`} class="text-cyan-600 mt-2 inline-block hover:underline">Read more</a>
        </article>
      ))}
    </div>
  </div>
</section>
