---
import BaseLayout from '../layouts/BaseLayout.astro';
import { graphQLClient, gql } from '../lib/graphql';

const GET_POSTS = gql`
  query GetPosts {
    posts(where: { categoryNameIn: ["acme-marketing", "all"] }) {
      nodes {
        title
        uri
        categories {
          nodes {
            name
          }
        }
      }
    }
  }
`;

let posts = [];
try {
  const data = await graphQLClient.request(GET_POSTS);
  posts = data.posts.nodes;
} catch (error) {
  console.error("Error fetching posts:", error);
}
---

<BaseLayout title="ACME Marketing - Blog">
	<header>
		<h1>Welcome to ACME Marketing Blog</h1>
	</header>

	<main class="container">
		{posts.length > 0 ? (
			<ul>
				{posts.map((post) => (
					<li>
						<a href={post.uri}>{post.title}</a>
						{post.categories && post.categories.nodes.length > 0 && (
							<span> ({post.categories.nodes.map(cat => cat.name).join(', ')})</span>
						)}
					</li>
				))}
			</ul>
		) : (
			<p>No posts found. Please add some posts in your WordPress CMS with the category "acme-marketing" or "all".</p>
		)}
	</main>

	<footer>
		<p>&copy; {new Date().getFullYear()} ACME Marketing. All rights reserved.</p>
	</footer>
</BaseLayout>