---
import BaseLayout from '../layouts/BaseLayout.astro';
import { getCta } from '../lib/loadCtaData.js';
const heroCta = getCta({ page: 'services', location: 'hero' });
---
<BaseLayout title="Services - ACME Marketing">
  <main class="container mx-auto px-4 py-12">
    <h1 class="text-4xl font-extrabold text-center mb-8 text-gray-900">Our Services</h1>
    <div class="prose lg:prose-xl mx-auto text-gray-700 mb-12">
      <p>Discover how ACME Marketing can help you automate, optimize, and grow your business with AI-powered solutions and expert strategy.</p>
    </div>
    <div class="text-center mt-12 p-8 bg-blue-50 border-l-4 border-blue-500 rounded-lg shadow-md">
      <h3 class="text-3xl font-bold text-blue-800 mb-4">{heroCta['TITLE']}</h3>
      <p class="text-lg text-gray-700 mb-6">{heroCta['DESCRIPTION']}</p>
      <a href="#" id="open-ebook-modal-services" class="inline-block bg-blue-600 text-white font-bold py-3 px-8 rounded-full text-lg hover:bg-blue-700 transition duration-300 transform hover:scale-105" data-book-id={heroCta['BOOK ID']}>
        {heroCta['BUTTON TEXT']}
      </a>
    </div>
  </main>
</BaseLayout> 